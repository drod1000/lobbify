<div class='container'>
  <h2><%=  @politician.name %></h2>
  <div class='row'>
    <div class='col-md-1'>
      <img class='img-responsive' src="<%= @politician.image %>">
    </div>
    <div class='col-md-11'>
      <li>Party:
        <%= @politician.party %>
      </li>
      <li>Senator from:
        <strong><%= @politician.state %></strong>
      </li>
    </div>
  </div>
  <div class='row'>
    <% @politician.outings.each do |outing|%>
      <%= render partial: 'shared/outing', locals: {outing: outing} %>
    <% end %>
  </div>
</div>
