<div class = "col-md-offset-3 col-md-6 text-center">
  <h1>Login</h1>
</div>
<div class = "col-md-offset-4 col-md-4">
  <%= bootstrap_form_tag url: '/login' do |f| %>
    <%= f.email_field :email, placeholder: 'Enter your email: name@example.com', skip_label: true %>
    <%= f.password_field :password, placeholder: 'Enter your password', skip_label: true %>
    <%= f.submit 'Login', {class: "btn btn-info btn-block"}%>
  <% end %>
  <p class = "login-or-separator text-center"><strong>OR</strong></p>
  <%= link_to "Create Account", new_user_path, class: "btn btn-default btn-block" %>
</div>